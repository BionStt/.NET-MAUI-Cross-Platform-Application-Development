@page "/group"
@page "/group/{SelectedItemId}"
@using PassXYZLib

<!-- Back button and title -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>
                @if (selectedItem!.GetParentLink() != null)
                {
                    <a class="btn btn-outline-dark" href="@selectedItem!.GetParentLink()">
                        <span class="oi oi-chevron-left" aria-hidden="true"></span></a>
                }
                @(" " + Title)
                <button type="button" class="btn btn-outline-dark float-end" 
                        data-bs-toggle="modal" data-bs-target="#editModel"
                        @onclick="@(() => IsKeyEditingEnable=true)">
                    <span class="oi oi-plus" aria-hidden="true"></span></button>
            </h1>
        </div>
    </div>
</div>

<!-- List view with context menu -->
<div class="list-group">
    @foreach (var item in items)
    {
        <div class="dropdown list-group-item list-group-item-action d-flex gap-1 py-2" aria-current="true">
            <img src="@item.GetIcon()" alt="twbs" width="32" height="32" 
                class="rounded-circle flex-shrink-0 float-start">
            <a href="@item.GetActionLink()" class="list-group-item list-group-item-action border-0 gap-1 py-2">
                <div class="d-flex">
                    <div>
                        <h6 class="mb-0">@item.Name</h6>
                        <p class="mb-0 opacity-75">@item.Description</p>
                    </div>
                </div>
            </a>
            <button class="opacity-50 btn btn-light dropdown-toggle" type="button" 
                id="itemsContextMenu" data-bs-toggle="dropdown" aria-expanded="false"
                @onclick="@(() => listGroupItem=item)">
                <span class="oi oi-menu" aria-hidden="true"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="itemsContextMenu">
                <li>
                    <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#editModel"
                        @onclick="@(() => IsKeyEditingEnable=false)">
                        Edit</button></li>
                <li>
                    <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deleteModel">
                    Delete</button></li>
            </ul>
        </div>
    }
</div>

<!-- Editing Modal -->
<div class="modal fade" id="editModel" tabindex="-1" aria-labelledby="editModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModelLabel">
                    @if (IsKeyEditingEnable)
                    {
                        <span>Add a new item</span>
                    }
                    else 
                    {
                        <span>Edit</span>
                    }
                        
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="row gx-2 gy-3">
                    @if (IsKeyEditingEnable)
                    {
                        <select @bind="newItemType" class ="form-select" aria-label="Group">
                            <option selected value=@ItemSubType.Group>@ItemSubType.Group</option>
                            <option value=@ItemSubType.Entry>@ItemSubType.Entry</option>
                            <option value=@ItemSubType.PxEntry>@ItemSubType.PxEntry</option>
                            <option value=@ItemSubType.Notes>@ItemSubType.Notes</option>
                        </select>
                        <div>
                            <label for="keyField">Name</label>
                            <input type="text" class="form-control" id="keyField" 
                                @bind="newItemTitle">
                        </div>
                    }
                    <div>
                        @if (IsKeyEditingEnable)
                        {
                            <label for="valueField">Notes</label>
                        }
                        else
                        {
                            <input type="text" class="form-control" id="keyField"
                               value="@listGroupItemName"
                               @onchange="OnNameChanged">
                        }
                        <textarea class="form-control" id="valueField" style="height: 100px"
                                  value=@listGroupItemNotes
                                  @onchange="OnNotesChanged" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                        @onclick="UpdateItemAsync">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Deleting Modal -->
<div class="modal fade" id="deleteModel" tabindex="-1" aria-labelledby="deleteModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModelLabel">Please confirm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Do you want to delete @listGroupItemName?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                        @onclick="DeleteItemAsync">Confirm</button>
            </div>
        </div>
    </div>
</div>

